{
  "name": "leopold",
  "version": "1.0.0",
  "description": "An app to help me keep my music business organised.",
  "main": "app.ts",
  "scripts": {
    "ci-deploy": "balena push Leopold",
    "ci-login": "balena login",
    "dev": "NODE_ENV=dev ts-node-dev -r dotenv/config  --ignore-watch node_module --watch src app.ts",
    "lint": "eslint .",
    "lint-dev": "eslint . --fix",
    "start": "NODE_ENV=production ts-node app.ts",
    "test": "NODE_ENV=test npx jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FiddlersCode/leopold.git"
  },
  "author": "Paula Muldoon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FiddlersCode/leopold/issues"
  },
  "homepage": "https://github.com/FiddlersCode/leopold#readme",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/js-yaml": "^3.12.1",
    "@types/mongodb": "^3.3.14",
    "@types/node": "^12.12.17",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "babel-jest": "^24.9.0",
    "balena-cli": "^11.21.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "js-yaml": "^3.13.1",
    "mongodb-memory-server": "^6.2.2",
    "ts-jest": "^24.2.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "dependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "express": "^4.17.1",
    "mongodb": "^3.5.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-dev && npm run test"
    }
  },
  "jest": {
    "globalSetup": "./node_modules/@shelf/jest-dynamodb/setup.js",
    "globalTeardown": "./node_modules/@shelf/jest-dynamodb/teardown.js"
  }
}
